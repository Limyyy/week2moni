<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/ck_recyclerView_item_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_recyclerView_item_shop"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_recyclerView_item_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="hhhhh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_recyclerView_item_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="#f00"
                    android:text="hhhhh" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_delnum"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:background="#2222"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_addnum"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="+" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#f0f"
        android:orientation="vertical"
        android:weightSum="1">
    </LinearLayout>

</LinearLayout>
